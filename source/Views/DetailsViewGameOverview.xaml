<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{DynamicResource DetailsScrollViewer}"
                                  d:DesignWidth="1500"
                                  d:DesignHeight="1700"
                                  d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                  x:Name="PART_ScrollViewHost">
                        <Grid Margin="0,0,0,20" x:Name="MainGrid">
                            <Grid x:Name="NoiseGrid" Height="{Binding ElementName=TopHeader, Path=ActualHeight}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Top">
                                <Viewbox Stretch="UniformToFill" >
                                    <FadeImage Name="BlurGameBackground" ImageDarkeningBrush="#990E0E0E"
                                               HighQualityBlur="False" SourceUpdateDelay="40"
                                               IsBlurEnabled="True" AnimationEnabled="True"
                                               Height="96" RenderOptions.BitmapScalingMode="LowQuality" BlurAmount="10"
                                               HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <FadeImage.Style>
                                            <Style TargetType="FadeImage">
                                                <Setter Property="Source" Value="{Binding ElementName=PART_ImageBackground, Path=Source}" />
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=PART_ImageBackground, Path=ActualHeight}" Value="0">
                                                        <Setter Property="Source" Value="{x:Null}" />
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FadeImage.Style>
                                    </FadeImage>
                                </Viewbox>

                                <Border Height="{Binding ElementName=NoiseGrid, Path=ActualHeight}"
                                        Width="{Binding ElementName=MainGrid, Path=ActualWidth}"
                                        Background="{DynamicResource NoiseBrush}" Opacity="0.015"/>
                            </Grid>

                            <!-- BackgroundChanger plugin background -->
                            <WrapPanel Tag="{DynamicResource DetailsViewBackgroundImageUseOpacityMask}">
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=AlternativeVideoPlayer, Path=Visibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                <Setter Property="OpacityMask">
                                                    <Setter.Value>
                                                        <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                                            <RadialGradientBrush.GradientStops>
                                                                <GradientStop Color="Black" Offset="0.3" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </RadialGradientBrush.GradientStops>
                                                        </RadialGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <Grid>
                                    <ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top" />
                                    <Border IsHitTestVisible="False"
                                            Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}">
                                        <Border.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Color="#F2FFFFFF" Offset="0.2"/>
                                                    <GradientStop Color="#B3FFFFFF" Offset="0.8"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Border.OpacityMask>
                                    </Border>
                                </Grid>
                            </WrapPanel>

                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Name="TopHeader">
                                    <Border Visibility="Hidden" Height="{Settings CalculatedGameDetailsIndentation}"
                                            MinHeight="{DynamicResource PanelTopPanelSeparatorHeight}" />
                                    <Grid Margin="40,0,40,0" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" MinHeight="400">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" MinHeight="30" MaxHeight="150" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <WrapPanel Grid.Row="0">
                                                <DockPanel>
                                                    <Image Name="PART_ImageIcon" MaxHeight="48" MaxWidth="48" DockPanel.Dock="Left" 
                                                           Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant">
                                                        <Image.Effect>
                                                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#0d0d0d" Opacity="0.20"/>
                                                        </Image.Effect>
                                                    </Image>

                                                    <Border DockPanel.Dock="Left"
                                                    Tag="{DynamicResource DetailsViewDisplayGameNameIfLogoVisible}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                                            <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                                            <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontFamily="{DynamicResource FontFamily}" Name="PART_TextDisplayName"
                                                                   FontSize="{DynamicResource FontSizeLargest}" Margin="0,0,10,0"
                                                                   FontWeight="SemiBold"
                                                                   TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White">
                                                            <TextBlock.Effect>
                                                                <DropShadowEffect ShadowDepth="1" RenderingBias="Quality" Color="#80808080" />
                                                            </TextBlock.Effect>
                                                        </TextBlock>
                                                    </Border>


                                                </DockPanel>

                                                <ContentControl x:Name="DuplicateHider_SourceSelector" 
                                                            DockPanel.Dock="Left" VerticalAlignment="Center"
                                                            VerticalContentAlignment="Center"   
                                                            Margin="0,0,10,0"  
                                                            Height="24"
                                                            RenderOptions.BitmapScalingMode="Fant" />

                                                <ContentControl x:Name="CheckLocalizations_PluginFlags" Height="30" Margin="0,0,10,0"
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationFlags, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            HorizontalAlignment="Left" VerticalAlignment="Center"
                                                            Opacity="0.85" />

                                                <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl"
                                                            Margin="0,0,10,0"
                                                            DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <ContentControl.Resources>
                                                        <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                    </ContentControl.Resources>
                                                </ContentControl>

                                            </WrapPanel>

                                            <StackPanel Grid.Row="1" Name="PART_ElemDevelopers"
                                                    Orientation="Horizontal" VerticalAlignment="Top">
                                                <Label Margin="0,0,10,0"
                                                   FontWeight="Medium"
                                                   Content="{DynamicResource LOCDeveloperLabel}"
                                                   Foreground="White" VerticalAlignment="Center"/>
                                                <ItemsControl VerticalAlignment="Center" Name="PART_ItemsDevelopers">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Name="PART_ElemPublishers"
                                                    Orientation="Horizontal" VerticalAlignment="Top">
                                                <Label Margin="0,0,10,0"
                                                   FontWeight="Medium"
                                                   Content="{DynamicResource LOCPublisherLabel}"
                                                   Foreground="White" VerticalAlignment="Center"/>
                                                <ItemsControl VerticalAlignment="Center" Name="PART_ItemsPublishers">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Name="PART_ElemPlatform"
                                                    Orientation="Horizontal" VerticalAlignment="Top">
                                                <Label Margin="0,0,10,0"
                                                   FontWeight="Medium"
                                                   Content="{DynamicResource LOCGamePlatformTitle}"
                                                   Foreground="White" VerticalAlignment="Center"/>
                                                <ItemsControl VerticalAlignment="Center" Name="PART_ItemsPlatforms">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>
                                            <ScrollViewer Grid.Row="5" Height="110"
                                                      VerticalScrollBarVisibility="Auto">
                                                <HtmlTextView
                                                    Name="PART_HtmlDescription"
                                                    HtmlFontSize="{DynamicResource FontSize}"
                                                    HtmlFontFamily="{DynamicResource FontFamily}"
                                                    HtmlForeground="#afafaf"
                                                    LinkForeground="{DynamicResource GlyphColor}"                                      
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                                            </ScrollViewer>
                                            <ContentControl Grid.Row="6" VerticalAlignment="Bottom"
                                                        x:Name="LibraryManagement_PluginFeaturesIconList" Height="35" Margin="0,10,0,0"
                                                        HorizontalAlignment="Left"
                                                        Opacity="0.75"
                                                        Visibility="{PluginSettings Plugin=LibraryManagement, Path=EnableIntegrationFeatures, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <!--{DynamicResource LOCPlayGame}-->
                                            <WrapPanel Margin="0,0,0,0" Grid.Row="7" VerticalAlignment="Bottom">
                                                <Button Margin="0,15,18,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="PART_ButtonPlayAction" Style="{DynamicResource PlayButtonViews}" />
                                                <Button Margin="0,15,18,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="PART_ButtonContextAction" Style="{DynamicResource ContextButtonViews}" />
                                                <Button Name="PART_ButtonMoreActions" Content="&#xE712;" FontFamily="Segoe MDL2 Assets" Margin="0,15,18,0" Style="{DynamicResource MoreActionButtonViews}" />
                                                <Button x:Name="PART_ButtonEditGame" Content="&#xE70F;" FontFamily="Segoe MDL2 Assets" Margin="0,15,0,0" Focusable="False" Style="{DynamicResource MoreActionButtonViews}" />
                                                <ContentControl x:Name="PlayState_GameStateSwitchControl" Margin="10,15,0,0"
                                                                Height="54"
                                                            Visibility="{PluginSettings Plugin=PlayState, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="ScreenshotsVisualizer_PluginButton" Margin="10,15,0,0"
                                                            Height="40" MaxWidth="150" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="HowLongToBeat_PluginButton" Height="54" VerticalAlignment="Center" Margin="10,15,0,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=HowLongToBeat, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="CheckDlc_PluginButton" Height="54" VerticalAlignment="Center" Margin="10,15,0,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=CheckDlc, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="SuccessStory_PluginButton" Height="54" VerticalAlignment="Center" Margin="10,15,0,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="GameActivity_PluginButton" Height="54" VerticalAlignment="Center" Margin="10,15,0,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=GameActivity, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="SystemChecker_PluginButton" Height="54" VerticalAlignment="Center" Margin="10,15,0,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=SystemChecker, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <ContentControl x:Name="CheckLocalizations_PluginButton" Height="54" VerticalAlignment="Center" Margin="10,15,0,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            </WrapPanel>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl"
                                                                Grid.Row="0"
                                                                HorizontalAlignment="Center"
                                                                Margin="15" />
                                                <Grid Grid.Row="1"
                                                      HorizontalAlignment="Center">
                                                    <Border Name="Mask"
                                                            Background="White"
                                                            CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}" />
                                                    <Border>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Image Name="PART_ImageCover" Height="{Settings GameDetailsCoverHeight}" 
                                                               StretchDirection="Both" Stretch="Uniform" 
                                                               RenderOptions.BitmapScalingMode="Fant" />
                                                    </Border>

                                                    <ContentControl x:Name="BackgroundChanger_PluginCoverImage"
                                                        Height="{Settings GameDetailsCoverHeight}">
                                                        <ContentControl.Style>
                                                            <Style TargetType="ContentControl">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataCover, FallbackValue=False}" Value="True" />
                                                                            <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableCoverImage, FallbackValue=False}" Value="True" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ContentControl.Style>
                                                    </ContentControl>

                                                    <Grid.Effect>
                                                        <DropShadowEffect BlurRadius="15" RenderingBias="Performance"
                                                                          ShadowDepth="0" Color="#0d0d0d" Opacity="0.20" />
                                                    </Grid.Effect>
                                                    <Grid.OpacityMask>
                                                        <VisualBrush Visual="{Binding ElementName=Mask}" />
                                                    </Grid.OpacityMask>
                                                </Grid>
                                            </Grid>
                                            <!--GridConverterGridPanelCloseButton-->
                                        </Grid>
                                    </Grid>
                                    <Border Height="40" Visibility="Hidden" />
                                </StackPanel>
                                
                                <Border Grid.Row="1" Margin="0,0,0,0"
                                        Padding="40,12,40,12"
                                        MinHeight="84"
                                        Background="{DynamicResource DetailsViewPanelBackgroundBrush}">
                                    <Grid x:Name="GridFooter" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}">
                                        <StackPanel Orientation="Horizontal">
                                            <!--<Grid Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                                <Border Name="Mask"
                                                    Margin="0,0,20,0"
                                                    Background="White" CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}" />
                                                <Border>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Image Name="PART_ImageCover" Height="{Settings GameDetailsCoverHeight}" 
                                                       Margin="0,0,20,0"
                                                       StretchDirection="Both" Stretch="Uniform"
                                                       RenderOptions.BitmapScalingMode="Fant" />
                                                </Border>

                                                <ContentControl x:Name="BackgroundChanger_PluginCoverImage"
                                                            Margin="0,0,20,0"
                                                            Height="{Settings GameDetailsCoverHeight}">
                                                    <ContentControl.Style>
                                                        <Style TargetType="ContentControl">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataCover, FallbackValue=False}" Value="True" />
                                                                        <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableCoverImage, FallbackValue=False}" Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ContentControl.Style>
                                                </ContentControl>
                                                <Grid.OpacityMask>
                                                    <VisualBrush Visual="{Binding ElementName=Mask}" />
                                                </Grid.OpacityMask>
                                            </Grid>-->

                                            <WrapPanel Width="{Binding ElementName=GridFooter, Path=ActualWidth}" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <WrapPanel.Resources>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                        <Setter Property="Foreground" Value="{DynamicResource DetailsViewPanelTextForegroundBrush}" />
                                                    </Style>
                                                    <Style TargetType="TextBlock" x:Key="Icon">
                                                        <Setter Property="Foreground" Value="{DynamicResource DetailsViewPanelIconForegroundBrush}" />
                                                        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                                                    </Style>
                                                    <Style TargetType="Label" x:Key="LabelHeaderStyle">
                                                        <Setter Property="Foreground" Value="{DynamicResource DetailsViewDetailsLabelForegroundBrush}" />
                                                        <Setter Property="FontWeight" Value="Medium" />
                                                        <Setter Property="Margin" Value="-5,0,0,0" />
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                    </Style>
                                                </WrapPanel.Resources>
                                                <DockPanel Visibility="{Binding Visibility, ElementName=PART_ElemLibrary, Mode=OneWay}" Margin="0,0,15,0">
                                                    <Viewbox Stretch="Uniform" Height="40">
                                                        <TextBlock Text="&#xE1D3;" Style="{DynamicResource Icon}" />
                                                    </Viewbox>
                                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <Label Name="PART_ElemLibrary" Content="{DynamicResource LOCGameProviderTitle}" Style="{DynamicResource LabelHeaderStyle}" />
                                                        <Button Name="PART_ButtonLibrary" Style="{StaticResource PropertyItemButton}" Margin="0" />
                                                    </StackPanel>
                                                </DockPanel>

                                                <DockPanel Visibility="{Binding Visibility, ElementName=PART_ElemCompletionStatus, Mode=OneWay}" Margin="0,0,15,0">
                                                    <Viewbox Stretch="Uniform" Height="40">
                                                        <TextBlock Text="&#xF16A;" Style="{DynamicResource Icon}" />
                                                    </Viewbox>
                                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <Label Name="PART_ElemCompletionStatus" Content="{DynamicResource LOCCompletionStatus}" Style="{DynamicResource LabelHeaderStyle}" />
                                                        <Button Name="PART_ButtonCompletionStatus" Style="{StaticResource PropertyItemButton}" Margin="0" />
                                                    </StackPanel>
                                                </DockPanel>
                                                
                                                <DockPanel Visibility="{Binding Visibility, ElementName=PART_ElemLastPlayed, Mode=OneWay}" Margin="0,0,15,0">
                                                    <Viewbox Stretch="Uniform" Height="35">
                                                        <TextBlock Text="&#xE163;" Style="{DynamicResource Icon}" />
                                                    </Viewbox>
                                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}" Style="{DynamicResource LabelHeaderStyle}" />
                                                        <TextBlock Name="PART_TextLastActivity" MinWidth="85"/>
                                                    </StackPanel>
                                                </DockPanel>
                                                <DockPanel Visibility="{Binding Visibility, ElementName=PART_ElemPlayTime, Mode=OneWay}" Margin="0,0,15,0">
                                                    <Viewbox Stretch="Uniform" Height="35">
                                                        <TextBlock Text="&#xE121;" Style="{DynamicResource Icon}" />
                                                    </Viewbox>
                                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" Style="{DynamicResource LabelHeaderStyle}" />
                                                        <TextBlock Name="PART_TextPlayTime"/>
                                                    </StackPanel>
                                                </DockPanel>
 
                                                <DockPanel Margin="0,0,15,0">
                                                    <DockPanel.Style>
                                                        <Style TargetType="{x:Type DockPanel}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=False}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DockPanel.Style>
                                                    <Viewbox Stretch="Uniform" Height="30">
                                                        <TextBlock Text="&#xE728;" Style="{DynamicResource Icon}" />
                                                    </Viewbox>

                                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                                        <Label Content="{DynamicResource LOCSuccessStoryAchievements}" Style="{DynamicResource LabelHeaderStyle}" />
                                                        <DockPanel>
                                                            <DockPanel MinWidth="40">
                                                                <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue='-'}"/>
                                                                <TextBlock Text="/"/>
                                                                <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue='-'}"/>
                                                            </DockPanel>
                                                            <ProgressBar x:Name="progressBar" FontSize="10" Margin="5,0,0,0"
                                                            Maximum="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue=0}" Value="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue=0}" HorizontalAlignment="Left"
                                                            Background="#37393e" Foreground="{DynamicResource DetailsViewPanelIconForegroundBrush}" Width="60" Height="10" Style="{DynamicResource RoundedProgressBar}">
                                                                <ProgressBar.Resources>
                                                                    <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
                                                                        <Setter Property="Background" Value="{DynamicResource NormalBrushDark}"/>
                                                                        <Setter Property="BorderThickness" Value="{DynamicResource ControlBorderThickness}"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                                                    <Border BorderThickness="{TemplateBinding BorderThickness}"
								                                                CornerRadius="{DynamicResource ControlCornerRadius}">
                                                                                        <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                                                                            <Rectangle Fill="{TemplateBinding Background}" RadiusY="4" RadiusX="4"/>
                                                                                            <Rectangle x:Name="PART_Track" Margin="0" RadiusY="4" RadiusX="4"/>
                                                                                            <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                                                                                                <Grid>
                                                                                                    <Rectangle Fill="{TemplateBinding Foreground}" RadiusY="4" RadiusX="4"/>
                                                                                                </Grid>
                                                                                            </Decorator>
                                                                                        </Grid>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ProgressBar.Resources>
                                                            </ProgressBar>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </DockPanel>

                                                <DockPanel Margin="0,0,0,0">
                                                    <DockPanel.Style>
                                                        <Style TargetType="{x:Type DockPanel}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{PluginSettings Plugin=HowLongToBeat, Path=HasData, FallbackValue=False}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DockPanel.Style>
                                                    <Viewbox Stretch="Uniform" Height="30">
                                                        <Path Stretch="Fill" Fill="{DynamicResource DetailsViewPanelIconForegroundBrush}" Data="m 157.80154 541.46802 v -400 h 97.14286 97.14286 
